    <div class="container">
      <h2>Change Reservation Information</h2>
      <form action="#" method="post">
        <div class="form-group">
          <label for="reservation_id">Reservation ID:</label>
          <ainput type="text" id="reservation_id" name="reservation_id" value="12345" readonly>
        </div>
        <h3>New Reservation Information</h3>
        <div class="form-group">
          <label for="new_dropoff_date">New Dropoff Date:</label>
          <input type="datetime-local" id="new_dropoff_date" name="new_dropoff_date" required>
        </div>
        <div class="form-group">
          <label for="new_pickup_date">New Pickup Date:</label>
          <input type="datetime-local" id="new_pickup_date" name="new_pickup_date" required>
        </div>
        <div class="form-group">
          <label for="new_kennel_number">New Kennel Number:</label>
          <select id="new_kennel_number" name="new_kennel_number" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <!-- Add more kennel numbers as needed -->
          </select>
        </div>
        <button class="button" type="submit">Submit Changes</button>
      </form>
  
      <h3>Cancel Reservation</h3>
      <form action="#" method="post">
        <div class="form-group">
          <label for="cancel_reservation_id">Reservation ID:</label>
          <input type="text" id="cancel_reservation_id" name="cancel_reservation_id" required>
        </div>
        <button class="button" type="submit">Cancel Reservation</button>
      </form>
    </div>
