<%- include('../partials/emp-client-head', {title: 'Client Search', type: 'Employee'}) %>


<body>
    <div class="container">
      <h2>Client Information:</h2>

      <form class="form-group" action="/update_client/<%= found_client.clientID %>" method="post">
        <label for="clientFN">First Name:</label>
        <input type="text" id="clientFN" name="clientFN" value="<%= found_client.clientFN %>" required><br>
        <label for="clientLN">Last Name:</label>
        <input type="text" id="clientLN" name="clientLN" value="<%= found_client.clientLN %>" required><br>
        <label for="clientEmail">Email:</label>
        <input type="email" id="clientEmail" name="clientEmail" value="<%= found_client.clientEmail %>" required><br>
        <label for="clientPhone">Phone:</label>
        <input type="tel" id="clientPhone" name="clientPhone" value="<%= found_client.clientPhone %>" required><br>

        <div style="margin-top: 10px;"></div>

        <input type="submit" value="Update this client's information">
      </form>
      
    </div>

    <div style="margin-top: 20px;"></div>

    <div class="container">
      <form class="form-group" action="/delete_client/<%= found_client.clientID %>" method="post">
        <input type="submit" value="Delete this client's information">
      </form>
    </div>
  </body>
  </html>
  
  